{
    "swagger": "2.0",
    "info": {
        "description": "SSO service API.",
        "title": "SSO API",
        "contact": {},
        "version": "1.0"
    },
    "basePath": "/",
    "paths": {
        "/auth/logIn": {
            "post": {
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "auth"
                ],
                "summary": "Login user",
                "parameters": [
                    {
                        "description": "Credentials",
                        "name": "request",
                        "in": "body",
                        "required": true,
                        "schema": {
                            "$ref": "#/definitions/github_com_phenirain_sso_internal_dto_auth.AuthRequest"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK",
                        "schema": {
                            "$ref": "#/definitions/github_com_phenirain_sso_internal_dto_auth.AuthResponse"
                        }
                    }
                }
            }
        },
        "/auth/password/complete": {
            "post": {
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "auth"
                ],
                "summary": "Complete password reset",
                "parameters": [
                    {
                        "description": "Token + new password",
                        "name": "request",
                        "in": "body",
                        "required": true,
                        "schema": {
                            "$ref": "#/definitions/github_com_phenirain_sso_internal_dto_auth.PasswordResetComplete"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK",
                        "schema": {
                            "type": "object",
                            "additionalProperties": true
                        }
                    }
                }
            }
        },
        "/auth/password/request": {
            "post": {
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "auth"
                ],
                "summary": "Request password reset token",
                "parameters": [
                    {
                        "description": "Login",
                        "name": "request",
                        "in": "body",
                        "required": true,
                        "schema": {
                            "$ref": "#/definitions/github_com_phenirain_sso_internal_dto_auth.PasswordResetRequest"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK",
                        "schema": {
                            "type": "object",
                            "additionalProperties": true
                        }
                    }
                }
            }
        },
        "/auth/refresh": {
            "post": {
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "auth"
                ],
                "summary": "Refresh access token",
                "responses": {
                    "200": {
                        "description": "OK",
                        "schema": {
                            "$ref": "#/definitions/github_com_phenirain_sso_internal_dto_auth.AuthResponse"
                        }
                    }
                }
            }
        },
        "/auth/logout": {
            "post": {
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "auth"
                ],
                "summary": "Logout user and clear refresh cookie",
                "responses": {
                    "200": {
                        "description": "OK",
                        "schema": {
                            "type": "object",
                            "additionalProperties": true
                        }
                    }
                }
            }
        },
        "/auth/signUp": {
            "post": {
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "auth"
                ],
                "summary": "Register user",
                "parameters": [
                    {
                        "description": "Credentials",
                        "name": "request",
                        "in": "body",
                        "required": true,
                        "schema": {
                            "$ref": "#/definitions/github_com_phenirain_sso_internal_dto_auth.AuthRequest"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK",
                        "schema": {
                            "$ref": "#/definitions/github_com_phenirain_sso_internal_dto_auth.AuthResponse"
                        }
                    }
                }
            }
        }
    },
    "definitions": {
        "github_com_phenirain_sso_internal_dto_auth.AuthRequest": {
            "type": "object",
            "properties": {
                "full_name": {
                    "description": "Полное имя (используется при регистрации)",
                    "type": "string",
                    "example": "Иван Иванов"
                },
                "login": {
                    "description": "Логин пользователя",
                    "type": "string",
                    "example": "user123"
                },
                "telegram_chat_id": {
                    "description": "Telegram chat ID для работы с ботом",
                    "type": "integer",
                    "format": "int64",
                    "example": 123456789
                },
                "telegram_username": {
                    "description": "Telegram username (используется при регистрации)",
                    "type": "string",
                    "example": "my_telegram"
                },
                "password": {
                    "description": "Пароль пользователя",
                    "type": "string",
                    "example": "P@ssw0rd!"
                }
            }
        },
        "github_com_phenirain_sso_internal_dto_auth.AuthResponse": {
            "type": "object",
            "properties": {
                "access_token": {
                    "description": "Access Token для доступа к защищенным ресурсам",
                    "type": "string"
                },
                "refresh_token": {
                    "description": "Refresh Token для обновления пары токенов",
                    "type": "string"
                },
                "role": {
                    "description": "Название роли пользователя",
                    "type": "string"
                },
                "user_id": {
                    "description": "Идентификатор пользователя",
                    "type": "integer"
                }
            }
        },
        "github_com_phenirain_sso_internal_dto_auth.PasswordResetComplete": {
            "type": "object",
            "properties": {
                "new_password": {
                    "description": "Новый пароль",
                    "type": "string"
                },
                "token": {
                    "description": "Токен сброса пароля",
                    "type": "string"
                }
            }
        },
        "github_com_phenirain_sso_internal_dto_auth.PasswordResetRequest": {
            "type": "object",
            "properties": {
                "login": {
                    "description": "Логин или Telegram пользователя",
                    "type": "string",
                    "example": "user123"
                }
            }
        }
    }
}
